{
    "name": "apteryx.xyz",
    "version": "3.0.0",
    "private": true,
    "packageManager": "yarn@3.2.0",
    "scripts": {
        "clean": "rm -rf .nuxt .output",
        "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
        "lint:prettier": "prettier --check .",
        "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
        "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
        "build": "nuxt build",
        "serve": "nuxt start -p 3000",
        "start": "pm2 start npm --name=apteryx -- run serve",
        "restart": "pm2 restart apteryx",
        "stop": "pm2 stop apteryx",
        "pull": "pm2 reset --hard && git pull && yarn && yarn build && yarn restart",
        "update:nginx": "cp nginx.conf /etc/nginx/sites-enabled/apteryx.xyz"
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --cache",
        "*.{css,scss,sass,html,vue}": "stylelint",
        "*.**": "prettier --check --ignore-unknown"
    },
    "dependencies": {
        "nuxt": "^3.0.0-rc.3",
        "nuxt-icons": "^1.0.1",
        "vue": "^3.2.33"
    },
    "devDependencies": {
        "@nuxt/types": "^2.15.8",
        "@nuxtjs/eslint-config-typescript": "^10.0.0",
        "@sapphire/eslint-config": "^4.3.4",
        "@types/node": "^17.0.32",
        "eslint": "^8.15.0",
        "eslint-plugin-nuxt": "^3.2.0",
        "postcss-html": "^1.4.1",
        "prettier": "^2.6.2",
        "stylelint": "^14.8.2",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-vue": "^1.1.0",
        "stylelint-config-standard": "^24.0.0",
        "typescript": "^4.6.4"
    }
}
