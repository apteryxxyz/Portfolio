{
  "extends": "ts-config-apteryx",
  "include": ["src/**/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  }
}
