{
    "extends": "ts-config-apteryx",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "preserve",
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [{ "name": "next" }]
    },
    "include": ["src/**/*", ".next/types/**/*.ts"],
    "exclude": ["node_modules", "scripts"]
}
