{
  "extends": "ts-config-apteryx",
  "include": ["src/**/**/*", ".next/types/**/*.ts", "__temp/layout.tsx"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "contentlayer/generated": [".contentlayer/generated"]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
  "mdx": { "plugins": ["remark-gfm"] }
}
