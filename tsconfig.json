{
    "extends": "ts-config-apteryx",
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./dist",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "paths": {
            "#/*": ["./lib/*"],
            "~/*": ["./*"]
        },
        "jsx": "preserve",
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "exclude": ["node_modules", ".next/**/**/*"],
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "pages/**/*.tsx",
        "lib/components/**/*.tsx",
        "lib/**/*.ts"
    ]
}
