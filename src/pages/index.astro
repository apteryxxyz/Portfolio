---
import Layout from './_layout.astro';

import AboutCard from '../components/home/about-card.astro';
import EducationCard from '../components/home/education-card.astro';
import LocationCard from '../components/home/location-card.astro';
import NameCard from '../components/home/name-card.tsx';
import ProjectsButton from '../components/home/projects-button.tsx';
import TechnologiesCard from '../components/home/technologies-card.astro';
import TitleCard from '../components/home/title-card.astro';
---

<Layout>
  <div
    class="grid grid-cols-1 gap-5 p-5 lg:grid-cols-3 lg:grid-rows-6"
  >
    <NameCard
      className="col-span-full lg:col-span-1 lg:col-start-2 lg:row-span-2 lg:row-start-3"
    />
    <LocationCard
      className="col-span-full lg:col-span-1 lg:col-start-3 lg:row-span-3 lg:row-start-1 [--initial-transform:translateX(100px)] lg:opacity-0 lg:animate-in lg:delay-200" 
    />
    <TitleCard
      className="col-span-full lg:col-span-1 lg:col-start-1 lg:row-span-1 lg:row-start-3"
    />
    <AboutCard
      className="col-span-full lg:col-span-2 lg:col-start-1 lg:row-span-2 lg:row-start-1 [--initial-transform:translateY(-100px)] lg:opacity-0 lg:animate-in lg:delay-100"
    />
    <ProjectsButton
      className="col-span-full lg:col-span-1 lg:col-start-3 lg:row-span-1 lg:row-start-4"
    />
    <TechnologiesCard
      className="col-span-full lg:col-span-1 lg:col-start-1 lg:row-span-3 lg:row-start-4 [--initial-transform:translateX(-100px)] lg:opacity-0 lg:animate-in lg:delay-200"
    />
    <EducationCard
      className="col-span-full lg:col-span-2 lg:col-start-2 lg:row-span-2 lg:row-start-5 [--initial-transform:translateY(100px)] lg:opacity-0 lg:animate-in lg:delay-100"
    />
  </div>
</Layout>
